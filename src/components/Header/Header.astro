---
import "./Header.css";
import { Nav } from "./components/Nav/Nav";
import { Image } from "astro:assets";
import avatarImage from "../../images/avatar.jpg";

export interface LinkProp {
  url: string;
  label: string;
  external?: boolean;
}

const links: LinkProp[] = [
  {
    url: "/about",
    label: "About",
  },
  {
    url: "/recommendations",
    label: "Recs",
  },
  {
    url: "/quotes",
    label: "Quotes",
  },
  {
    url: "http://snesjhon.dev",
    label: "Portfolio",
    external: true,
  },
  {
    url: "./resume.pdf",
    label: "Resume",
    external: true,
  },
];
---

<header class="container">
  <hgroup>
    <Image src={avatarImage} alt="Jhonatan Salazar" class="avatar" width={200} height={200} format="webp" quality={85} />
    <h1>Jhonatan Salazar</h1>
    <h2>
      Just a kid from Oakland, running around believing in fairy tales
    </h2>
  </hgroup>
  <Nav links={links} client:only="react" />
  <hr />
</header>
